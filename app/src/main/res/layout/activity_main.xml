<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="mSplashModel" type="com.csj.lovevideo.ui.spalsh.SplashViewModel"/>
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.csj.lovevideo.ui.widget.LoveTvToolbar
                android:id="@+id/loveTvToolbar"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:visible="@{mSplashModel.isVisible}"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:background="@color/colorPrimary"
                android:layout_height="?android:attr/actionBarSize"/>


        <fragment
                android:id="@+id/navHostFragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_weight="1"
                app:defaultNavHost="true"
                app:navGraph="@navigation/nav_graph_love_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
